#function to reverse the array
def reverseArray(arr):
    start=0
    end=len(arr)-1
    while start<end:
        temp=arr[start]
        arr[start]=arr[end]
        arr[end]=temp
        start+=1
        end-=1
        
#function to print the array
def printArray(arr):
    for i in range(len(arr)):
        print(arr[i], end=" ")
        
#test function        
arr=[1,2,3,4,5]
reverseArray(arr)
printArray(arr)

#output
#5 4 3 2 1 
